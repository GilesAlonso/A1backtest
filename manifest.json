{
  "name": "OHLC EdgeFinder Professional",
  "organization": "SolveThis Analytics",
  "description": "Professional OHLC candlestick chart with EdgeFinder scoring system.",
  "logoUrl": "https://solvethis.qzz.io/A1backtest/images/logo.png",
  "iconUrl": "https://solvethis.qzz.io/A1backtest/images/component-icon.png",
  "resource": {
    "js": "visualization.js",
    "css": "style.css"
  },
  "data": [
    {
      "id": "dateDimension",
      "label": "Date (Dimension)",
      "elements": [
        {
          "type": "DIMENSION",
          "supportedTypes": ["DATE", "DATE_TIME"]
        }
      ]
    },
    {
      "id": "ohlcMetrics",
      "label": "Metrics (Order: Open, High, Low, Close, Score)",
      "elements": [
        {
          "type": "METRIC",
          "label": "Open Price"
        },
        {
          "type": "METRIC",
          "label": "High Price"
        },
        {
          "type": "METRIC",
          "label": "Low Price"
        },
        {
          "type": "METRIC",
          "label": "Close Price"
        },
        {
          "type": "METRIC",
          "label": "EdgeFinder Score"
        }
      ]
    }
  ],
  "style": [
    {
      "id": "theme",
      "label": "Theme",
      "type": "SELECT_SINGLE",
      "defaultValue": "light",
      "options": [
        {"label": "Light Theme", "value": "light"},
        {"label": "Dark Theme", "value": "dark"}
      ]
    },
    {
      "id": "ma_options",
      "label": "Moving Averages",
      "type": "OpACITY", 
      "defaultValue": 1
    },
    {
      "id": "ma3_enabled",
      "label": "Show 3-Day MA",
      "type": "CHECKBOX",
      "defaultValue": true
    },
    {
      "id": "ma14_enabled",
      "label": "Show 14-Day MA",
      "type": "CHECKBOX",
      "defaultValue": false
    },
    {
      "id": "ma20_enabled",
      "label": "Show 20-Day MA",
      "type": "CHECKBOX",
      "defaultValue": true
    },
    {
      "id": "ma50_enabled",
      "label": "Show 50-Day MA",
      "type": "CHECKBOX",
      "defaultValue": true
    },
    {
      "id": "ma100_enabled",
      "label": "Show 100-Day MA",
      "type": "CHECKBOX",
      "defaultValue": false
    },
    {
      "id": "ma200_enabled",
      "label": "Show 200-Day MA",
      "type": "CHECKBOX",
      "defaultValue": true
    }
  ]
}
